<% include ../partials/head.ejs %>

<div id="app" class="container edit-address">

	<div class="row account-header">
		<div class="col-12">
			<ul class="breadcrumb pull-left">
				<li><a href="https://trubrain.com/tools/account">My Account</a></li>
				<li class="active">Edit Address</li>
			</ul>
			<span class="pull-right account-user">
				<a :href="account + '/profile'"><i class="far fa-user"></i> {{customer.email}}</a> |
				<a href="{{shop.url | replace: 'www.', ''}}/account/logout">Logout</a>
			</span>
		</div>
	</div>

	<div class="account-body subscription-options">
		<div class="row">
			<div class="col-12">
				<h2>Edit Address</h2>
			</div>
		</div>
		<div class="row" v-if="address !== undefined">
			<div class="form-group col-12 col-sm-6" v-for="(option, index) in options">
				<label class="form-label" :for="option" v-text="labels[index]"></label>
				<input type="text" class="form-control" v-model="address[option]">
			</div>
			<div class="col-12 subscription-actions">
				<button class="btn large action" @click="updateAddress($event)" data-original="Update Address">Update Address</button>
			</div>
		</div>
	</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script>
<script src="<%= server %>/js/portal.js"></script>
<script>initAddress(<%= address %>)</script>